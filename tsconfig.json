{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES5",
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "preserveConstEnums": true,
        "strict": true,
        "moduleResolution": "node",
        "declaration": true
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "test",
        "node_modules"
    ]
}