{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "google"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "quotes": ["error", "single"],
        "indent": ["error", 4],
        "quote-props": ["error", "as-needed"],
        "object-curly-spacing": ["error", "always"],
        "semi": ["error", "always"],
        "require-jsdoc": "off",
        "comma-dangle": ["error", "never"],
        "max-len": ["error", 120]
    },
    "ignorePatterns": [
        "dist/",
        "coverage/"
    ]
}
